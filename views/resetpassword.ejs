<h1>Reset Password</h1>

<% if (locals.message) { %>
    <div class="alert">
        <%= locals.message %>
    </div>
<% } %>

<form method="POST" action="/login/resetpassword">
    <input type="text" name="token" placeholder="Enter your reset token" required>
    <input type="password" name="password" placeholder="New password" required>
    <input type="password" name="passwordConfirmation" placeholder="Confirm new password" required>
    <button type="submit">Reset Password</button>
</form>

<p>
    <a href="/login" class="text-blue-500 hover:underline">Back to Login</a>
</p>